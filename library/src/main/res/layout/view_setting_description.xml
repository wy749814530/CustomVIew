<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:foreground="@drawable/button_ripple_light"
    android:paddingLeft="15dp"
    android:paddingRight="15dp">

    <com.wang280727.customview.RCImageView
        android:id="@+id/iv_left_icon"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:scaleType="centerCrop"
        android:src="@mipmap/left_icon" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_toLeftOf="@+id/iv_right_icon"
        android:layout_toRightOf="@+id/iv_left_icon"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_title_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#333333"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/tv_description_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:textColor="#666666"
            android:textSize="13sp" />
    </LinearLayout>

    <ImageView
        android:id="@+id/iv_right_icon"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:maxWidth="30dp"
        android:maxHeight="30dp" />
</RelativeLayout>