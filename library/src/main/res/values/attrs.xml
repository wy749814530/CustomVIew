<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- 一下区域为圆角属性  -->
    <!-- *圆角*公共属性* -->
    <!--圆形-->
    <attr name="round_as_circle" format="boolean" />
    <!--全部圆角半径-->
    <attr name="round_corner" format="integer|dimension" />
    <!--针对各个角的半径-->
    <attr name="round_corner_top_left" format="integer|dimension" />
    <attr name="round_corner_top_right" format="integer|dimension" />
    <attr name="round_corner_bottom_left" format="integer|dimension" />
    <attr name="round_corner_bottom_right" format="integer|dimension" />

    <!--描边颜色／半径-->
    <attr name="stroke_color" format="color|reference" />
    <attr name="stroke_width" format="integer|dimension" />


    <!-- 是否剪裁 RCLayout 的背景 -->
    <attr name="clip_background" format="boolean" />
    <declare-styleable name="RCAttrs">
        <attr name="round_as_circle" />
        <attr name="round_corner" />
        <attr name="round_corner_top_left" />
        <attr name="round_corner_top_right" />
        <attr name="round_corner_bottom_left" />
        <attr name="round_corner_bottom_right" />
        <attr name="stroke_color" />
        <attr name="stroke_width" />
        <attr name="clip_background" />
    </declare-styleable>

    <!--圆角相对布局：用于提示-->
    <declare-styleable name="RCRelativeLayout">
        <attr name="round_as_circle" />
        <attr name="round_corner" />
        <attr name="round_corner_top_left" />
        <attr name="round_corner_top_right" />
        <attr name="round_corner_bottom_left" />
        <attr name="round_corner_bottom_right" />
        <attr name="stroke_color" />
        <attr name="stroke_width" />
        <attr name="clip_background" />
    </declare-styleable>

    <!--圆角图片：用于提示-->
    <declare-styleable name="RCImageView">
        <attr name="round_as_circle" />
        <attr name="round_corner" />
        <attr name="round_corner_top_left" />
        <attr name="round_corner_top_right" />
        <attr name="round_corner_bottom_left" />
        <attr name="round_corner_bottom_right" />
        <attr name="stroke_color" />
        <attr name="stroke_width" />
        <attr name="clip_background" />
    </declare-styleable>
    <!-- 以上区域为圆角属性  -->
    <!-- 以上区域为圆角属性  -->
    <!-- 以上区域为圆角属性  -->

    <!-- 以下区域为自定一View快捷控件区域  -->

    <attr name="left_icon" format="reference" />
    <attr name="right_icon" format="reference" />
    <attr name="clear_icon" format="reference" />
    <attr name="eye_open_icon" format="reference" />
    <attr name="eye_close_icon" format="reference" />

    <attr name="show_left_icon" format="boolean" />
    <attr name="show_right_icon" format="boolean" />

    <declare-styleable name="SettingItemView">
        <attr name="left_Text" format="string" />
        <attr name="right_Text" format="string" />
        <attr name="left_icon" />
        <attr name="right_icon" />
        <attr name="show_left_icon" />
        <attr name="show_right_icon" />
    </declare-styleable>

    <declare-styleable name="SettingDescriptionView">
        <attr name="title_Text" format="string" />
        <attr name="title_Text_color" format="color|reference" />
        <attr name="title_Text_size" format="integer|dimension" />
        <attr name="description_Text" format="string" />
        <attr name="description_text_color" format="color|reference" />
        <attr name="description_text_size" format="integer|dimension" />
        <attr name="left_icon_corner">
            <enum name="as_default" value="0" />
            <enum name="as_circle" value="1" />
            <enum name="as_corner" value="2" />
        </attr>
        <attr name="right_icon" />
        <attr name="left_icon" />
        <attr name="show_left_icon" />
        <attr name="show_right_icon" />
    </declare-styleable>

    <declare-styleable name="LineView">
        <attr name="line_color" format="color|reference" />
    </declare-styleable>

    <declare-styleable name="PasswordEditView">
        <attr name="android:hint" />
        <attr name="android:textColor" />
        <attr name="android:text" />
        <attr name="android:textSize" />
        <attr name="android:inputType" />
        <attr name="android:maxLength" />
        <attr name="left_icon" />
        <attr name="clear_icon" />
        <attr name="eye_open_icon" />
        <attr name="eye_close_icon" />
    </declare-styleable>

    <declare-styleable name="TimingTextView">
        <attr name="android:textColor" />
        <attr name="android:text" />
        <attr name="android:textSize" />
        <attr name="maxNum" />
        <attr name="android:maxLength" />
        <attr name="left_icon" />
        <attr name="clear_icon" />
        <attr name="eye_open_icon" />
        <attr name="eye_close_icon" />
    </declare-styleable>
</resources>